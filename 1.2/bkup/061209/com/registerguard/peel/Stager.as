package com.registerguard.peel {		import flash.display.DisplayObject;	import flash.display.StageScaleMode;	import flash.display.StageAlign;		public class Stager {				private var _this:DisplayObject;				public function Stager(t:DisplayObject):void {						_this = t;						init();					};				private function init():void {						// Stage:			_this.stage.scaleMode = StageScaleMode.NO_SCALE;			_this.stage.align = StageAlign.TOP_RIGHT;					};			};	};
package com.registerguard.time {		import flash.display.MovieClip;	import flash.text.TextField;	import flash.events.Event;	import flash.utils.getTimer;		public class Seconds extends MovieClip {				private var _lastTime:Number;		private var _curTime:Number;		private var _start:Number;		private var _secTxt:TextField;				public function Seconds() {						init();					};				private function init():void {						_secTxt = this.seconds_txt;						_start = getTimer();						reset();						this.addEventListener(Event.ENTER_FRAME, onSecondUpdate, false, 0, true);					};				private function onSecondUpdate(e:Event) {						var pFrame = MovieClip(this.parent).currentFrame;			trace("-------" + pFrame);			if (pFrame == 1) {								reset();							} else {								_curTime = (getTimer() / 1000);  // turn into seconds							}						if ((_curTime - _lastTime) > 1) {								_lastTime = Math.round(_curTime);				_secTxt.text = _lastTime.toString();							}					};				private function reset():void {						_lastTime = 0;			_curTime = getTimer() - _start;			trace(_curTime + "+++++++++++++++");			_secTxt.text = "0";					};			};	};
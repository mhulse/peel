package com.registerguard.peel {		import flash.display.DisplayObject;	import flash.display.LoaderInfo;		public class Params {				private var _this:Object;				/**		* Params()		*        About: Class constructor.		*      Returns: Nothing.		*       @param: this.		*/		public function Params(t:Object) {						trace('Params() instantiated...');						_this = t;					};				/**		* getParam()		*        About: Checks for embed parameters.		*      Returns: Embeded parameter or a default value.		*     @param01: String, parameter name.		*     @param02: String, default file to load.		*/		public function getParam(p:String, d:String):String {						var param:String = p; // Parameter name to check.			var r:String = d; // Example of d: "default.swf"						// LoaderInfo object:			var paramObj:Object = LoaderInfo(_this.root.loaderInfo).parameters;						// Return parameter if it exists:			if (paramObj[param]) {				r = paramObj[param];			}						return r; // Return.					};			};	};